#!/bin/bash

background="#000000"
foreground=white
highlight="#308888"
FONT=profont-8

XPOS=940
YPOS=19
WIDTH="120"
HEIGHT="12"
LINES="12"

time=$(TZ="Europe/Spain" date | awk -F " " '{print $4}')
calendar=$(cal -1)
date=$(date | cut -d' ' -f1,2,3,6)

(echo " "; echo "   ^fg($highlight)$date"; echo " "; echo "$calendar"; sleep 5) | dzen2 -fg $foreground -h $HEIGHT -bg $background -fn $FONT -x $XPOS -y $YPOS -w $WIDTH -l $LINES -e 'enterslave=exit;leaveslave=exit;onstart=uncollapse,unhide;button1=exit;button3=exit'
